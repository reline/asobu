<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fuwafuwa.asobou" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a player. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the player's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--<uses-permission android:name="android.permission.INTERNET" /> gradle is crying because it's duplicated -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/asobu_ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- To access Fabric Digits API: -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6aebf3659c5f53f7d33e300095f5d2c538bfecd7" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".activities.ScoreboardActivity"
            android:label="@string/title_activity_scoreboard" >
        </activity>
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.SongSelectionActivity"
            android:label="@string/title_activity_song_selection" >
        </activity>
        <activity
            android:name=".activities.PlayTapModeActivity"
            android:label="@string/title_activity_play_tap_mode" >
        </activity>
        <activity
            android:name=".activities.PlayTypeModeActivity"
            android:label="@string/title_activity_play_type_mode" >
        </activity>
    </application>

</manifest>
