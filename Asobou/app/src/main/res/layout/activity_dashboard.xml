<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="fuwafuwa.asobou.DashboardActivity"
                android:background="@color/tw__solid_white">
    <!-- TODO: add a logo picture here-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/babymetal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:clickable="true"
        android:onClick="onPlayButtonClick"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_scoreboard"
        android:id="@+id/view_more_scores_button"
        android:layout_centerHorizontal="true"
        android:onClick="onViewMoreButtonClick"
        android:layout_below="@+id/play_button"/>

</RelativeLayout>
